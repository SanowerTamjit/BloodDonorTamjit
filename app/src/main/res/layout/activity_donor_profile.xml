<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logscreen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebca0707"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/clBtn"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:background="@drawable/ripple_effect"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/mlBtn"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ripple"
                android:backgroundTint="@color/green"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Mail"
                android:textAllCaps="false"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/clBtn" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="62dp"
                android:text="Snower Abedin"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textbloodgrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="Blood Group: A+"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/birthAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textbloodgrp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="Birthdate : 31-12-1996, (Age: 22)"
                android:textColor="#fff"
                android:textSize="14sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/country"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Country :"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/showcountry"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:linksClickable="false"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="City :"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/showcity"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="State :"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/showstate"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view99"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/zip"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Zip :"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/showzip"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/streetAdrs"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Street Address :"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat"
                        tools:text="Street Address :" />

                    <TextView
                        android:id="@+id/showstreetAdrs"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tlDonate"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Total Donate :"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/showtlDonate"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple_effect"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.71"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dtDonate"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="Last Date of Donate"
                        android:textAlignment="textEnd"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat"
                        tools:text="Last Date of Donate" />

                    <TextView
                        android:id="@+id/showdtDonate"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="10dp"
                        android:text="The Text Will Be Here"
                        android:textAllCaps="false"
                        android:textIsSelectable="true"
                        android:textSize="16sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>